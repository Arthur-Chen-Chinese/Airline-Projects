      <table tableName="user" domainObjectName="User"/>

        <table tableName="dealage" domainObjectName="DealAge"/>
        <table tableName="dealdate" domainObjectName="Dealdate"/>
        <table tableName="deal" domainObjectName="Deal"/>-->
